# UI Dockerfile
#
# This Dockerfile builds the Travel Agent frontend UI.
#
# Build from the lungo/ directory:
# docker build -f docker/Dockerfile.ui -t lungo-ui .

FROM node:20-alpine

WORKDIR /app

# Install wget, curl, and ping (iputils)
RUN apk add --no-cache wget curl iputils

# Copy package.json and package-lock.json, then install dependencies
COPY frontend/package.json frontend/package-lock.json ./

# Copy application files, including assets
COPY frontend/ .

# Install dependencies and build
# Use shell form to avoid permission issues with node_modules binaries
RUN npm install --verbose && \
    chmod +x node_modules/.bin/* && \
    npm run build --verbose && \
    npm cache clean --force

# Expose port 3000
EXPOSE 3000

# Copy the script to build and serve the UI
COPY docker/ui-build-and-serve.sh ./ui-build-and-serve.sh

# Start the application
CMD ["sh", "./ui-build-and-serve.sh"]
